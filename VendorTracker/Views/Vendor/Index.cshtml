 @{
      Layout = "_Layout";
  }
@using VendorTracker.Models
<h3>Vendor List:</h3>
@if(Model.Count == 0)
{
<p>Your Vendor list is empty.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href="vendor/@vendor.Id">@vendor.Name</a></li>
  }
</ul>
<h2><a href="vendor/new">Add A New Vendor</a></h2>